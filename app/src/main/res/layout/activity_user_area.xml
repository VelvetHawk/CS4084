<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/space_background"
    tools:context="project.cs4084.asteroids.UserAreaActivity">

    <TextView
        android:text="TextView"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/userAreaWelcome" />

    <Button
        android:text="Sound On/Off"
        android:background="@drawable/custom_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/userAreaPause"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userAreaMiniGame"
        android:layout_alignStart="@+id/userAreaMiniGame"
        android:textStyle="normal|bold|italic" />

    <Button
        android:text="Play Mini Game"
        android:background="@drawable/custom_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/userAreaMiniGame"
        android:layout_above="@+id/userAreaPause"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold|italic" />

    <Button
        android:text="Play"
        android:background="@drawable/custom_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/userAreaPlay"
        android:layout_above="@+id/userAreaMiniGame"
        android:layout_alignLeft="@+id/userAreaMiniGame"
        android:layout_alignStart="@+id/userAreaMiniGame"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:text="Set daily notification"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/userAreaPause"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <Button
        android:text="On"
        android:background="@drawable/green_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAreaReminder"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/userAreaReminderCancel"
        android:layout_alignStart="@+id/userAreaReminderCancel" />

    <Button
        android:text="Off"
        android:background="@drawable/red_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAreaReminderCancel"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
