<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#00D1FF"/> <!-- red #FF0000 old #1E669B -->
            <stroke
                android:width="2dp"
                android:color="#FF0000"/> <!-- old#1B5E91 -->
            <corners
                android:radius="6dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#1E669B"
                android:startColor="#1E669B"/> <!-- red #FF0000 old #1E669B -->
            <stroke
                android:width="4dp"
                android:color="#14507D"/> <!-- red #FF0000 old #1B5E91 -->
            <corners
                android:radius="7dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"/>
        </shape>
    </item>
</selector>